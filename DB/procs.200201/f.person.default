COMMIT WORK;
SET AUTODDL OFF;
SET TERM ^ ;

CREATE OR ALTER TRIGGER ADD_PERSON_DEFAULT FOR PERSON
ACTIVE BEFORE INSERT POSITION 1 
AS
BEGIN
   IF (NEW.ID IS NULL) THEN
   BEGIN  
/*    NEW.ID = NEXT VALUE FOR ID_GEN; */   
      NEW.ID = UUID_TO_CHAR(GEN_UUID());
   END
   IF (NEW.ID = 0) THEN
   BEGIN  
/*    NEW.ID = NEXT VALUE FOR ID_GEN; */   
      NEW.ID = UUID_TO_CHAR(GEN_UUID());
   END
END ^


SET TERM ; ^
COMMIT WORK;
SET AUTODDL ON;
