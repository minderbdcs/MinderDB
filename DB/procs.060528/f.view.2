
CREATE VIEW PICK_WIP_ISSN (PROD_ID, PICK_ORDER_QTY, PICKED_QTY, LOCN_ID, CURRENT_QTY, ISSN_STATUS) AS
SELECT PI.PROD_ID, SUM(PI.PICK_ORDER_QTY),SUM(PI.PICKED_QTY),ISSN.LOCN_ID, SUM(ISSN.CURRENT_QTY),ISSN.ISSN_STATUS FROM PICK_ITEM PI JOIN CONTROL C1 ON C1.RECORD_ID = 1 LEFT OUTER JOIN ISSN ON ISSN.PROD_ID = PI.PROD_ID AND ISSN.WH_ID=C1.DEFAULT_WH_ID AND (ISSN.LOCN_ID NOT STARTING 'DS') AND ISSN.CURRENT_QTY > 0 WHERE PI.PICK_LINE_STATUS IN ('AL','PG','PL','DS')  AND (PI.PICKED_QTY IS NULL OR (PI.PICKED_QTY <> PI.PICK_ORDER_QTY))  GROUP BY PI.PROD_ID,ISSN.LOCN_ID,ISSN.ISSN_STATUS   ;
