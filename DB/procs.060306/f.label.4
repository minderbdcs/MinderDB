  WK_PI_1_PICK_ORDER_QTY VARCHAR(20),
  WK_PI_1_SALE_PRICE VARCHAR(20),
  WK_PI_1_TAX_AMOUNT VARCHAR(20),
  WK_PI_1_LINE_TOTAL VARCHAR(20),
  WK_PI_1_OTHER1 VARCHAR(50),
  WK_PI_1_OTHER2 VARCHAR(50),
  WK_PI_1_OTHER3 VARCHAR(50),
  WK_PI_1_OTHER4 VARCHAR(50),
  WK_PI_1_OTHER5 VARCHAR(50),
  WK_PI_1_OTHER6 VARCHAR(50),
  WK_PI_1_OTHER7 VARCHAR(50),
  WK_PI_1_OTHER8 VARCHAR(50),
  WK_PI_1_OTHER9 VARCHAR(50),
