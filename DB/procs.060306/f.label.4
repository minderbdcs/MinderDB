  WK_FILE_PATH2 VARCHAR(70),
  WK_PI_1_BAY VARCHAR(20),
  WK_PI_1_SHELF VARCHAR(20),
  WK_PI_1_COMPARTMENT VARCHAR(20),
  WK_PI_1_SHELF_COMP VARCHAR(20),
