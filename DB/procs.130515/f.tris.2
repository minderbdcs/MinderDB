CREATE OR ALTER TRIGGER RUN_TRANSACTION_TRIS FOR TRANSACTIONS 
ACTIVE AFTER INSERT POSITION 89 
AS
DECLARE VARIABLE WK_AUTORUN INTEGER;
BEGIN
 WK_AUTORUN = GEN_ID(AUTOEXEC_TRANSACTIONS,0); 
 IF (WK_AUTORUN = 1) THEN
 BEGIN
  IF (NEW.TRN_TYPE = 'TRIS') THEN
  BEGIN
   EXECUTE PROCEDURE PC_TRIS
    NEW.RECORD_ID ,
    NEW.WH_ID,
    NEW.LOCN_ID,
    NEW.OBJECT,
    NEW.TRN_TYPE,
    NEW.TRN_CODE,
    NEW.TRN_DATE,
    NEW.REFERENCE,
    NEW.QTY,
    NEW.SUB_LOCN_ID,
    NEW.PERSON_ID,
    NEW.DEVICE_ID;
   /* EXECUTE PROCEDURE TRAN_ARCHIVE; */
  END
 END
END ^
 

