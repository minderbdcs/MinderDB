
CREATE PROCEDURE ADD_ORDER_GROUP_PICK (WK_CAMPAIGN VARCHAR(10),
WK_ORDER VARCHAR(15),
WK_PERSON VARCHAR(10))
AS 
DECLARE VARIABLE WK_FOUND INTEGER;
BEGIN
   WK_FOUND = 0;
   SELECT 1  FROM PICK_ORDER_GROUP
   WHERE ORDER_GROUP_ID = :WK_CAMPAIGN  
   AND   PICK_ORDER = :WK_ORDER
  INTO :WK_FOUND ;
   IF (WK_FOUND = 0) THEN
   BEGIN
      INSERT INTO PICK_ORDER_GROUP(ORDER_GROUP_ID, PICK_ORDER, CREATE_DATE, CREATED_BY)
      VALUES (:WK_CAMPAIGN, :WK_ORDER, 'NOW', :WK_PERSON);
   END
END^
