alter table options add last_update_date last_update_date;

COMMIT WORK;
SET AUTODDL OFF;
SET TERM ^ ;

CREATE TRIGGER ADD_OPTIONS FOR OPTIONS 
ACTIVE BEFORE INSERT POSITION 10 
AS
BEGIN
   NEW.LAST_UPDATE_DATE = 'NOW';
END ^

CREATE TRIGGER UPD_OPTIONS FOR OPTIONS 
ACTIVE BEFORE UPDATE POSITION 10 
AS
BEGIN
   NEW.LAST_UPDATE_DATE = 'NOW';
END ^

SET TERM ; ^
COMMIT WORK;
SET AUTODDL ON;
