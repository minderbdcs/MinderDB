CREATE OR ALTER  TRIGGER ADD_PACK_MANIFEST_TIME FOR PACK_MANIFEST 
ACTIVE BEFORE INSERT POSITION 20 
AS
BEGIN
   IF ( NEW.LAST_UPDATE_DATE IS NULL) THEN
   BEGIN
      NEW.LAST_UPDATE_DATE = 'NOW';
   END
END ^

CREATE OR ALTER  TRIGGER UPDATE_PACK_MANIFEST_TIME FOR PACK_MANIFEST 
ACTIVE BEFORE UPDATE POSITION 20 
AS
BEGIN
   IF ( NEW.LAST_UPDATE_DATE IS NULL) THEN
   BEGIN
      NEW.LAST_UPDATE_DATE = 'NOW';
   END
END ^


SET TERM ; ^
COMMIT WORK;
SET AUTODDL ON;
