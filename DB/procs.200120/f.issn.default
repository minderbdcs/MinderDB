CREATE OR ALTER TRIGGER ADD_ISSN_DEFAULT FOR ISSN 
ACTIVE BEFORE INSERT POSITION 1 
AS
BEGIN
   IF (NEW.ID IS NULL) THEN
   BEGIN  
/*    NEW.ID = GEN_ID(ID_GEN, 1); */   
      NEW.ID = NEXT VALUE FOR ID_GEN;    
   END
   IF (NEW.ID = 0) THEN
   BEGIN  
/*    NEW.ID = GEN_ID(ID_GEN, 1); */ 
      NEW.ID = NEXT VALUE FOR ID_GEN;    
   END
END ^


SET TERM ; ^
COMMIT WORK;
SET AUTODDL ON;
