CREATE OR ALTER TRIGGER ADD_SYS_SCREEN FOR SYS_SCREEN 
ACTIVE BEFORE INSERT POSITION 10 
AS
BEGIN
   IF ((NEW.RECORD_ID IS NULL) OR (NEW.RECORD_ID = 0)) THEN
   BEGIN
      NEW.RECORD_ID  = GEN_ID(SYS_SCREEN_ID_GEN,1);
   END
   NEW.LAST_UPDATE_DATE = 'NOW';
END ^

